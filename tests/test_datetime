"""Date and Time tests."""

import datetime as dt
from unittest.mock import patch

from timedate import main


def test_time() -> None:
    """Test time function return current time."""
    assert main('Wie viel Uhr ist es') == f'Es ist {dt.datetime.now().strftime("%H:%M")}'


def test_date() -> None:
    """Test date function return current date."""
    assert main('Welcher Tag ist heute') == \
        f'Es ist der {dt.datetime.now().strftime("%d/%m/%Y")}'
